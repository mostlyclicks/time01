<div class="container">
  <div class="row" id="header">
    <div class="col-lg-3">
      <%= image_tag 'time-logo.png', class: 'img-responsive' %>
    </div>
    <div class="col-lg-9">
      <h2 class="text-right">2014 - 2015</h2>
    </div>
  </div>
</div>



<div class="container">

<div id="main-carousel" class="carousel slide" data-ride="carousel" style="min-height:300px;">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @home_features.each_with_index do |image, index| %>
    <li data-target="#main-carousel" data-slide-to="<%= index %>" class="<% if index == 0 %>active<% end %>"></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner row">
    <% @home_features.each_with_index do |feature, index| %>
      <div class="item row <% if index == 0 %>active<% end %>">
      <div id="home-feature-image" class="col-md-8"><%= image_tag feature.main_image.url, class: 'img-responsive'  %></div>
      <div id="home-text" class="col-md-4">
        <h1><%= feature.title %></h1>
        <%= raw feature.description %>
      </div>
<!--       <div class="carousel-caption">
        ...
      </div> -->
    </div>
    <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#main-carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#main-carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

</div>







