<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(home_feature) -%>">
  <span class='title'>
    <%= home_feature.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_home_features_admin_home_feature_path(home_feature),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.home_features_admin_home_feature_path(home_feature),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => home_feature.title),
        :method => :delete %>
  </span>
</li>
